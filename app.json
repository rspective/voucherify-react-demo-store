{
	"name": "Voucherify React Demo Store - 'Hot Beans'",
	"description": "Set up your own Voucherify demo store to learn our API",
	"keywords": ["voucherify", "API"],
	"website": "https://www.voucherify.io",
	"repository": "https://github.com/voucherifyio/voucherify-showcase-store",
	"env": {
		"REACT_APP_BACKEND_APP_ID": {
			"description": "Server-side Application ID"
		},
		"REACT_APP_BACKEND_KEY": {
			"description": "Server-side Application Secret Key"
		},
		"REACT_APP_FRONTEND_APP_ID": {
			"description": "Client-side Application ID"
		},
		"REACT_APP_FRONTEND_KEY": {
			"description": "Client-side Application Secret Key"
		},
		"SESSION_SECRET": {
			"description": "Session secret password",
			"generator": "secret"
		},
		"REACT_APP_VERSION": {
			"description": "App version",
			"value": "2.6.5"
		},
		"REACT_APP_API_ENDPOINT": {
			"description": "Voucherify endpoint. Defaults to https://api.voucherify.io",
			"required": false
		},
		"REACT_APP_OPEN_WEATHER_API_KEY": {
			"description": "Provide Openweather Api Key if you want to enable location based promotions on Hot Beans",
			"required": false
		}
	},
	"addons": [
		{
			"plan": "heroku-redis:hobby-dev"
		}
	]
}
